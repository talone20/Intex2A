@{
    ViewData["Title"] = "Edit Burial Entry";
    Layout = "~/Views/Shared/_NavBar.cshtml";
}
@model burialmain


<div class="text-center">
    <br/>
    <a class="btn btn-primary" href="@Url.Action("Edit", "Home", new { burialId = Model.id })">Edit</a>
    <a class="btn btn-primary" href="@Url.Action("Summary", "Home")">Back</a>
