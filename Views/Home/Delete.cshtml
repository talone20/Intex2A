                <input type="text" id="area" name="area" value="@Model.area"><br>

                <label asp-for="burialid">Burial ID:</label>
                <input type="number" id="burialid" name="burialid" value="@Model.burialid"><br>

                <label asp-for="length">Length:</label>
                <input type="text" id="length" name="length" value="@Model.length"><br>

                <label asp-for="burialnumber">Burial Number:</label>
