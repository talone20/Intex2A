@page
@model Intex2A.Views.Home.UnsuperviseModel

@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment HostingEnvironment
@{
    string htmlFilePath = "wwwroot/unsupervised.html";  //Edit this file path to the file path to your html file
    string htmlContent = System.IO.File.ReadAllText(htmlFilePath);
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Page</title>
    <style>
        <style >
        * {
            margin: 0;
            padding: 0;
            font-family: 'Roboto',sans-serif;
        }

        .hero {
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),url('lib/image/background.png');
            background-size: cover;
            background-position: center;
            padding-left: 8%;
            padding-right: 8%;
            box-sizing: border-box;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 1);
            height: 100%;
            width: 100%;
            position: absolute;
        }

        .bar {
            height: 12%;
            display: flex;
            align-items: center;
        }

        .logo {
            width: 50px;
            cursor: pointer;
        }

        .menu-icon {
            width: 30px;
            cursor: pointer;
            margin-left: 40px;
        }

        nav {
            flex: 1;
            text-align: right;
        }

            nav ul li {
                list-style: none;
                display: inline-block;
                margin-left: 60px;
            }

                nav ul li a {
                    text-decoration: none;
                    color: #fff;
                    font-size: 13px;
                }

        .row {
            display: flex;
            height: 88%;
            align-items: center;
        }

        .col h1 {
            color: #fff;
            font-size: 100px;
            text-align: left;
        }

        p {
            color: #fff;
            font-size: 11px;
            line-height: 15px;
        }

        button {
            width: 180px;
            color: #000;
            font-size: 12px;
            padding: 12px 0;
            background: #fff;
            border: 0;
            border-radius: 20px;
            outline: none;
            margin-top: 30px;
        }

        .card {
            width: 200px;
            height: 230px;
            display: inline-block;
            border-radius: 10px;
            padding: 15px 25px;
            box-sizing: border-box;
            cursor: pointer;
            margin: 10px 15px;
            background-position: center;
            background-size: cover;
            transition: transform 0.5s;
        }

        .card1 {
            background-image: url('lib/image/img_1256.jpg');
        }

        .card2 {
            background-image: url('lib/image/img_1254.jpg');
        }

        .card3 {
            background-image: url('lib/image/pic-3.png');
        }

        .card4 {
            background-image: url('lib/image/img_3638.jpg');
        }

        .card:hover {
            transform: translateY(-10px);
        }

        h5 {
            color: #fff;
            text-shadow: 0 0 5px #999;
        }

        .card p {
            text-shadow: 0 0 15px #000;
        }

        .section-container {
            font-family: 'Roboto', sans-serif;
            padding: 100px 0;
        }

        .section-title {
            font-weight: 700;
            color: #b86100;
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 50px;
                height: 4px;
                background-color: #b86100;
            }

        .section-text {
            font-size: 18px;
            line-height: 1.8;
            color: #6e5d2d;
            padding: 0 15px;
            margin-bottom: 40px;
        }

        .section-btn {
            background-color: #b86100;
            color: #fff;
            font-weight: 600;
            padding: 14px 35px;
            border-radius: 5px;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .section-btn:hover {
                background-color: #8f4b00;
                color: #fff;
                text-decoration: none;
            }

        .rounded-image {
            border-radius: 10px;
            margin-left: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .rounded-image:hover {
                transform: scale(1.05);
            }
    </style>
    </style>
</head>
<body>
    <div class="hero">
        <div class="bar">
            <img src="~/lib/image/logo.png" class="logo">
            <nav>
                <ul>
                    <li>
                        <a href="">Home</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Summary">Burial Information</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="PredictWrapping">Supervised</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Un...">Unsupervised</a>
                    </li>
                    <!-- Add more navigation items here as needed -->
                </ul>
            </nav>
        </div>
        <div class="overlay"></div>
        <div class="row">
            <div class="col">
    
                <p>
                    <img src="~/lib/image/area.jpg" />
                    <img src="~/lib/image/material.jpg" />
                    <img src="~/lib/image/thick.jpg" />
                    <img src="~/lib/image/materialscatterplot.jpg" />
                    <img src="~/lib/image/ageandlength (5).jpg" />
                </p>
                <button>Learn More</button>
            </div>
        </div>
    </div>
    <div>
        @Html.Raw(htmlContent)
    </div>
</body>
</html>