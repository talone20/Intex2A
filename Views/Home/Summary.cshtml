@{
    ViewData["Title"] = "Summary Page";
    Layout = "~/Views/Shared/_NavBar.cshtml";
}
@model List<burialmain>

<h2>Summary of the dead humans of Egyptian ethnicity, whose holy graves we dug from the earth to examine their long-rotted corpses</h2>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Home Page</a>
        </div>


        <div class="col-9">
                @foreach (burialmain Bm in Model)
                {
                    @*<partial name="BurialSummary" model="Bm" />*@
                    <div class="card card-outline-primary m-1 p-1">
                        <div class="bg-light p-1">
                            <h5>Burial ID: @Bm.Id</h5>
                        </div>
                        <ul>
                            <li>Preservation: @Bm.Preservation</li>
                            <li>Text: @Bm.Text</li>
                            <li>Hair Color: @Bm.Haircolor</li>
                            <li>Wrapping: @Bm.Wrapping</li>
                            <li>Sex: @Bm.Sex</li>
                            <li>Age at Death: @Bm.Ageatdeath </li>
                            <li>Facebundles: @Bm.Facebundles</li>
                        </ul>
                        <h5><a asp-controller="Home" asp-action="Edit" asp-route-id="@Bm.Id">Edit</a></h5>
                        <h5><a asp-controller="Home" asp-action="Delete" asp-route-id="@Bm.Id">Delete</a></h5>
                    </div>
                }
        </div>
    </div>

